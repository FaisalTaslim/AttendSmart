        </div>
    </footer>

    <script src="/js/global/UI/rearrange-footer.js"></script>
    <script src="/js/page-specific/dashboard/college-student/navigate-contents.js"></script>
    <script src="/js/global/face-api/face-api.min.js"></script>
    <script src="/js/global/face-api/recognition/load-models.js"></script>
    <script src="/js/global/face-api/recognition/student/face-attendance.js"></script>
</body>

</html>